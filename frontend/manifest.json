{
  "manifest_version": 3,
  "name": "Assistive Simplify Extension",
  "version": "1.0.0",
  "description": "Simplifies web pages and highlights main actions for accessibility.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/modules/audio-player.js",
        "scripts/modules/fab.js",
        "scripts/modules/overlay.js",
        "scripts/modules/action-finder.js",
        "scripts/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Simplify Page"
  }
}
